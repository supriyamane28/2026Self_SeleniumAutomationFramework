<suite name="Opencart Application Test Regression Suite" verbose="4" thread-count="2" parallel="tests">

<listeners>
<listener class-name="com.aventstack.chaintest.plugins.ChainTestListener"/>
<listener class-name="com.qa.OpencartProject.listeners.TestAllureListener"/>
<listener class-name="com.qa.OpencartProject.listeners.AnnotationTransformer"/>
</listeners>


<test name="Login Page Test">
<parameter name="browser" value="chrome"/>
<classes>
<class name="com.qa.OpencartProject.Tests.LoginPageTest"/>
</classes>
</test>

<test name="Accounts Page Test">
<parameter name="browser" value="firefox"/>
<classes>
<class name="com.qa.OpencartProject.Tests.AccountsPageTest"/>
</classes>
</test>

<test name="Search Page Test">
<parameter name="browser" value="edge"/>
<classes>
<class name="com.qa.OpencartProject.Tests.SearchResultPageTest"/>
</classes>
</test>

<test name="ProductInfo Page Test">
<parameter name="browser" value="chrome"/>
<classes>
<class name="com.qa.OpencartProject.Tests.ProductInfoPageTest"/>
</classes>
</test>

<test name="Register Page Test">
<parameter name="browser" value="firefox"/>
<classes>
<class name="com.qa.OpencartProject.Tests.RegisterPageTest"/>
</classes>
</test>

<test name="Login Negative Page Test">
<parameter name="browser" value="edge"/>
<classes>
<class name="com.qa.OpencartProject.Tests.LoginPageNegativeTest"/>
</classes>
</test>


</suite>